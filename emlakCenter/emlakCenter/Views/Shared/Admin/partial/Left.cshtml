@{string baseUrl = Request.Url.Scheme + "://" + Request.Url.Authority + Request.ApplicationPath.TrimEnd('/') + "/";}

<aside class="left-side sidebar-offcanvas">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/Content/admin/img/avatar3.png" class="img-circle" alt="User Image" />
            </div>
            <div class="pull-left info">
                <p>Hoşgeldin, @User.Identity.Name</p>

                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu">
            <li>
                <a href="@{@baseUrl}admin">
                    <i class="fa fa-dashboard"></i> <span>Anasayfa</span>
                </a>
            </li>
            <li class="treeview active">
                <a href="#">
                    <i class="fa fa-th"></i>
                    <span>İlanlar</span>
                    <i class="fa fa-angle-left pull-right"></i>
                </a>
                <ul class="treeview-menu">
                    <li><a href="@{@baseUrl}ilans"><i class="fa fa-angle-double-right"></i> Mevcut İlanlar</a></li>
                    <li><a href="@{@baseUrl}ilans/Create"><i class="fa fa-angle-double-right"></i> Yeni İlan Ekle</a></li>
                </ul>
            </li>
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>