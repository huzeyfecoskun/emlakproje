@model emlakCenter.Models.ilan

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Admin/_Layaut.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ilan</h4>
        <hr />
        <div class="form-group">
            <div class="control-label col-md-2"></div>
            <div class="col-md-10">
                <a href="~/admin/arsaDuzenle/?id=@Model.ilanNo&i=@Model.id" class="btn btn-success">Arsa Bilgilerini Güncelle</a>
                <a href="~/ilans/fotografEkle/?ilanNo=@Model.ilanNo" class="btn btn-success">Fotoğraf Ekle</a>
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)


        <div class="form-group">
            @Html.LabelFor(model => model.ilantarihi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ilantarihi, new { @class = "form-control", @value = emlakCenter.Models.Helper.tarih(Model.ilantarihi), @data_uk_datepicker = "{format:'DD-MM-YYYY'}" })
                @Html.ValidationMessageFor(model => model.ilantarihi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ilanSahibi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.ilanSahibi, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ilanSahibi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.takasDurum, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.takasDurum, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.takasDurum, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.krediyeUygunluk, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.krediyeUygunluk, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.krediyeUygunluk, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>
