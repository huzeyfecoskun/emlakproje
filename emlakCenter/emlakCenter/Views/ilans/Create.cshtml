@model emlakCenter.Models.ilan

@{
    ViewBag.Title = "Yeni İlan Oluştur";
    Layout = "~/Views/Shared/Admin/_Layaut.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Tip", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-control" data-val="true" data-val-required="tip alanı gereklidir." id="tip" name="tip">
                    <option selected="selected" value="0">ARSA</option>
                    <option value="1">EV</option>
                    <option value="2">ARABA</option>
                    <option value="3">MOTOSİKLET</option>
                    <option value="4">ELEKTRONİK</option>
                </select>
                @Html.ValidationMessageFor(model => model.tip, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ilanSahibi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-control" data-val="true" data-val-required="İlan Sahibi alanı gereklidir." id="ilanSahibi" name="ilanSahibi">
                    <option selected="selected" value="0">SAHİBİNDEN</option>
                    <option value="1">EMLAKÇIDAN</option>
                    <option value="2">BANKADAN</option>
                    <option value="3">MUTEAHHİTTEN</option>
                </select>
                @Html.ValidationMessageFor(model => model.ilanSahibi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.takasDurum, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-control" data-val="true" data-val-required="Takas alanı gereklidir." id="takasDurum" name="takasDurum">
                    <option selected="selected" value="0">UYGUN DEĞİL</option>
                    <option value="1">UYGUN</option>
                </select>
                @Html.ValidationMessageFor(model => model.takasDurum, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.krediyeUygunluk, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-control" data-val="true" data-val-required="Krediye Uygunluk alanı gereklidir." id="krediyeUygunluk" name="krediyeUygunluk">
                    <option selected="selected" value="0">UYGUN DEĞİL</option>
                    <option value="1">UYGUN</option>
                </select>
                @Html.ValidationMessageFor(model => model.krediyeUygunluk, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value=" Devam " class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("İlan Listesine Dön", "Index")
</div>
